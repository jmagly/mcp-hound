{
  "name": "@jmagly/mcp-hound",
  "version": "0.1.0",
  "description": "MCP server for Hound code search integration with Claude Code and other AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-hound": "dist/index.js",
    "mcp-hound-auth": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hound",
    "code-search",
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "gitea",
    "github"
  ],
  "author": "jmagly",
  "license": "MIT",
  "homepage": "https://github.com/jmagly/mcp-hound#readme",
  "bugs": {
    "url": "https://github.com/jmagly/mcp-hound/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmagly/mcp-hound.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^2.0.0"
  }
}
